class Solution {
public:
    int minSubArrayLen(int target, vector<int>& nums) {
        int i=0,j=0;
        int sum=0;
        int n=nums.size();
        int mi=INT_MAX;
        while(j<n)
        {
            sum+=nums[j];
            while(sum>=target && i<n)
            {
                mi=min(mi,(j-i+1));
                sum-=nums[i];
                    i++;
            }
            j++;
        }
        if(mi==INT_MAX)
            return 0;
        return mi;
    }
};
